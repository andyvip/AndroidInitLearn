<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="52dp"
    android:background="@drawable/list_background"
    android:layout_gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <CheckBox
                android:id="@+id/select"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentStart="true"
                android:focusable="false"
                android:visibility="gone" >
            </CheckBox>
            <!-- modify start by yaping.liu for pr452145-->
            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_toEndOf="@+id/select"
                android:layout_gravity="center_vertical" 
                android:gravity="center_vertical"
                android:textSize="20sp" >
            </TextView>
            <TextView
                android:id="@+id/folder"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"                          
                android:gravity="center_vertical"
                android:layout_toStartOf="@+id/distance"
                android:paddingEnd="5dip"
                android:background="@drawable/album_item_bg_selector"
                android:textSize="20sp" >
            </TextView>
	    <!-- modify end by yaping.liu for pr452145-->
			<ImageView
                android:id="@+id/distance"
                android:layout_width="5dp"
                android:layout_height="fill_parent"
                android:layout_toStartOf="@+id/iline" >
            </ImageView>
			<ImageView
                android:id="@+id/iline"
                android:layout_width="1dp"
                android:layout_height="46dp"
                android:layout_toStartOf="@+id/tubiao"
                android:background="@drawable/line" >
            </ImageView>
            <ImageView
                android:id="@+id/tubiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_down"
                android:layout_alignParentEnd="true" >
            </ImageView>
        </RelativeLayout>
</LinearLayout>
