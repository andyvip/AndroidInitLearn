<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bitmapback" >

    <include
        android:id="@+id/pintu_topbar"
        layout="@layout/pintu_topbar" />

    <ListView
        android:id="@+id/list_album"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bar"
        android:layout_below="@+id/pintu_topbar"
        android:cacheColorHint="@android:color/transparent"
        android:scrollbars="vertical"
        android:visibility="gone" />

    <GridView
        android:id="@+id/grid_album"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bar"
        android:layout_below="@+id/pintu_topbar"
        android:cacheColorHint="@android:color/transparent"
        android:clipChildren="true"
        android:columnWidth="90.0dip"
        android:gravity="center"
        android:horizontalSpacing="5.0dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="4"
        android:paddingLeft="5.0dip"
        android:paddingRight="5.0dip"
        android:scrollbarStyle="outsideOverlay"
        android:stretchMode="spacingWidth"
        android:verticalSpacing="5.0dip" />

    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_above="@+id/horizontalList"
        android:background="@color/gray" >

        <TextView
            android:id="@+id/picnum_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12.0dip"
            android:text="@string/choosed_pic"
            android:textSize="16.0dip" />

        <Button
            android:id="@+id/btn_goPintu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5.0dip"
            android:background="@drawable/btn_gopintu_bg"
            android:text="@string/start_jonitpic"
            android:textColor="@color/effect_button_color"
            android:textSize="14.0dip" />

        <TextView
            android:id="@+id/picnum_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/picnum_text1"
            android:text="@string/picnum_text"
            android:textColor="@android:color/white"
            android:textSize="18.0dip" />

        <TextView
            android:id="@+id/picnum_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/picnum_text1"
            android:layout_toRightOf="@+id/picnum_text"
            android:text="@string/pic_num"
            android:textSize="16.0dip" />
    </RelativeLayout>

    <!--
         <Gallery
        android:id="@+id/horizontalList"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_alignParentBottom="true"
        android:scrollbars="horizontal" />
    -->

    <com.jrdcom.example.joinpic.HorizontalListView
        android:id="@id/horizontalList"
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:scrollbars="horizontal" />

</RelativeLayout>