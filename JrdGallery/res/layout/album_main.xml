<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/topbar" android:background="@drawable/bg_view_topmenubackgroundpic_a" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true">
        <Button android:textSize="@dimen/text_size_common" 
            android:textColor="@android:color/black" 
            android:id="@id/btn_back" 
            android:background="@drawable/btn_top_back" 
            android:paddingLeft="7.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content" 
            android:layout_marginLeft="10.0dip" android:text="@string/home" android:layout_alignParentLeft="true" android:layout_centerVertical="true" />
        <!-- PR974032 modify The album title overlap with Cancel icon by fengke at 2015.04.14 strat -->
        <Button android:textSize="@dimen/text_size_common"
            android:textColor="@color/black"
            android:id="@id/btn_cancel"
            android:background="@drawable/btn_square_short"
            android:gravity="center"
            android:layout_width="75dp"
            android:layout_height="33dip"
            android:layout_marginRight="5.0dip"
            android:text="@string/cancel"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView android:textSize="20.0dip"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:id="@id/album_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_album"
            android:maxEms="6"
            android:singleLine="true"
            android:layout_centerInParent="true" />
        <!-- PR974032 modify The album title overlap with Cancel icon by fengke at 2015.04.14 end -->
    </RelativeLayout>
    <FrameLayout android:id="@id/album_content" 
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:layout_above="@id/album_selector" 
        android:layout_below="@id/topbar" >
         <include layout="@layout/album_grid"/>
         <include layout="@layout/album_list" />
    </FrameLayout>
    
    <FrameLayout android:id="@id/album_selector" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true" 
        >
         <include layout="@layout/album_selector" />
    </FrameLayout>
</RelativeLayout>
