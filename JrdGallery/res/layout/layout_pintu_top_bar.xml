<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/template_top"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@drawable/bg_view_topmenubackgroundpic_a"
    android:gravity="center_vertical" >

    <Button
        android:id="@+id/btn_pintu_return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:background="@drawable/btn_maininterface_returnhome_bg"
        android:gravity="center_vertical"
        android:paddingStart="22dip"
        android:paddingEnd="5dip"
        android:text="@string/btn_return"
        android:textColor="@color/black"
        android:textSize="13.0dip" />
    <TextView
        android:id="@+id/tvw_pintu_top_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4.0dip"
        android:textColor="@color/black"
        android:textSize="20.0dip"
        android:textStyle="bold"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_pintu_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="6.0dip"
        android:background="@drawable/btn_maininterface_saveandshare_bg"
        android:paddingStart="5dip"
        android:paddingEnd="15dip"
        android:text="@string/saveandshare"
        android:textColor="@color/black"
        android:textSize="13.0dip" />

</RelativeLayout>