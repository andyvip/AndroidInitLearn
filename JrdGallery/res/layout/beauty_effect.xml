<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bitmapback"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
>
    <include
        android:id="@+id/top_bar"
        layout="@layout/layout_common_top_bar" />
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_bar"
        android:layout_above="@+id/thumb_listview"
       
        >
       <!--PR944102 modify The image display incomplete when select Effect by fengke at 2015.03.11 start -->
       <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" 
           >
           <ImageView android:id="@+id/imgv_effect_bottom"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
            />
            <ImageView android:id="@+id/imgv_effect"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitCenter"
            />
           
       </FrameLayout>
       <!--PR944102 modify The image display incomplete when select Effect by fengke at 2015.03.11 end -->

       <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             android:orientation="vertical" 
            android:gravity="right|center"
           >
        <com.jrdcom.mt.widget.VSeekBar
            android:id="@+id/seekbar"
            android:layout_width="35dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right" />
        <TextView android:id="@+id/tvw_alpha_seekbar_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10.0dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/ic_seekbar_switch_on"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="5dip"
            />
        </LinearLayout>
    </FrameLayout>
    <ImageView android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_effect_and_frame_background"
        android:layout_marginBottom="-5dip"
        android:layout_above="@+id/bottom_layout" />
    <com.jrdcom.example.joinpic.HorizontalListView
        android:id="@+id/thumb_listview"
        android:layout_width="fill_parent"
        android:layout_height="75dip"
        android:layout_marginBottom="-3.0dip"
        android:layout_above="@+id/bottom_layout"
         />
   <FrameLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
   >
    <RadioGroup 
        android:id="@+id/bottom_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/bg_mainmenu_back_a"
       
    >
        <RadioButton android:id="@+id/rbtn_effect_lomo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:text="@string/lomo"
            style="@style/tabbar_4btn_item_l"
            android:paddingLeft="6.0dip"
        	android:paddingRight="6.0dip" />
        <RadioButton android:id="@+id/rbtn_effect_yinglou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:text="@string/portrait"
            style="@style/tabbar_4btn_item_m" />
        <RadioButton android:id="@+id/rbtn_effect_shishang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:text="@string/fashion"
            style="@style/tabbar_4btn_item_m" />
        <RadioButton android:id="@+id/rbtn_effect_yishu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:text="@string/art"
            style="@style/tabbar_4btn_item_r" />
    </RadioGroup>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
    >
    <ImageView android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_effect_and_frame_background_arrow"
        />
    </RelativeLayout>
   </FrameLayout>
    <ProgressBar android:id="@+id/effectBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />
    
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30.0dip"
        android:layout_marginBottom="20.0dip"
        android:layout_below="@id/top_bar"
        android:layout_alignBottom="@id/imgv_effect"
        android:layout_alignParentRight="true"
    >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvw_alpha_seekbar_switch"
            android:layout_alignLeft="@id/tvw_alpha_seekbar_switch"
            android:layout_alignRight="@id/tvw_alpha_seekbar_switch"
        >
         
<!--             <com.mt.mtxx.tools.MTSeekBarTool
    android:id="@id/seekbar_alpha_control"
    android:paddingTop="5.0dip"
    android:paddingBottom="10.0dip"
    android:visibility="visible"
    android:layout_width="22.0dip"
    android:layout_height="210.0dip"
    android:max="100"
    android:progress="100"
    android:progressDrawable="@drawable/progress"
    android:layout_centerHorizontal="true"
    mt:thumb="@drawable/ic_seekbar_thumb"
    mt:thumbOffset="5.0dip"
    mt:progressWidth="24.0dip"
    mt:isHorzontal="vertical" /> -->
        </RelativeLayout>
    </RelativeLayout>
    <FrameLayout android:id="@+id/help_tip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>    
