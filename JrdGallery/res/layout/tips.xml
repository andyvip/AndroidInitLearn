<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/tips"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#99000000" >

  <TextView
    android:id="@+id/tips_title"
    style="@style/TipsTitleText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="70dp"
    android:singleLine="true"
    android:text="@string/onef_inger_zoomer_tips_title" />

  <TextView
    android:id="@+id/tips_content"
    style="@style/TipsText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tips_title"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="10dp"
    android:text="@string/onef_inger_zoomer_tips" />

  <ImageView
    android:id="@+id/hand0"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/hand0"
    android:visibility="gone" />

  <ImageView
    android:id="@+id/hand1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/hand1"
    android:visibility="gone" />

  <ImageView
    android:id="@+id/hand2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/hand2"
    android:visibility="gone" />

  <ImageView
    android:id="@+id/basepic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/basepic" />

  <ImageView
    android:id="@+id/arrow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/arrow"
    android:visibility="gone" />

  <Button
    android:id="@+id/done"
    style="@style/TipsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="15dp" />

</RelativeLayout>
