<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/mtxx_back_pintu" >

    <include layout="@layout/layout_pintu_top_bar" />
    <!--
    <com.jrdcom.example.joinpic.Draw
        android:id="@+id/drawimage"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/template_top"
        android:layout_marginBottom="155.0dip"
        android:layout_marginLeft="45.0dip"
        android:layout_marginRight="30.0dip"
        android:layout_marginTop="45.0dip" />
    -->
    <!-- change backgground and add or delete images function buttons -->
 <LinearLayout
        android:id="@+id/layout_pintu_picFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80.0dip"
        android:gravity="center"
        android:visibility="visible" >

        <Button
            android:id="@+id/btn_pintu_changeFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_puzzle_style_setting_bg"
            android:text="@string/select_background"
            android:textColor="@color/black"
            android:paddingStart="15.0dip"
            android:paddingEnd="15.0dip"
            android:gravity="center"
            android:textSize="12.0dip" 
            android:layout_weight="1"
            android:singleLine="true"/>
        <!-- PR860361 modify translation problem by fengke at 2014.12.10 -->
        <Button
            android:id="@+id/btn_pintu_addOrDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_puzzle_style_setting_bg"
            android:drawableLeft="@drawable/icon_replacepic"
            android:gravity="center_vertical"
            android:paddingStart="15.0dip"
            android:paddingEnd="15.0dip"
            android:text="@string/pixi335_add_delete"
            android:textColor="@color/black"
            android:textSize="12.0dip" 
            android:singleLine="true"
            android:layout_weight="1"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/layout_pintu_style_choose"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/template_top"
        android:layout_above="@+id/layout_pintu_picFunction"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        >

        <Button
            android:id="@id/btn_pintu_laststyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-8.0dip"
            android:background="@drawable/btn_turn_left_bg" />

           <com.jrdcom.example.joinpic.FreePuzzleLayoutView 
              android:id="@id/freepuzzle_view" 
              android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:layout_toLeftOf="@id/btn_pintu_nextstyle"
              android:layout_toRightOf="@id/btn_pintu_laststyle"
              android:layout_centerHorizontal="true"
              android:layout_centerVertical="true"
              
               />
        
        <Button
            android:id="@id/btn_pintu_nextstyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="-8.0dip"
            android:background="@drawable/btn_turn_right_bg" />
    </RelativeLayout>

   
    
    <RelativeLayout
        android:id="@+id/template_picEdit"
        android:layout_width="fill_parent"
        android:layout_height="80.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/image_edit_bottom_bg"
        android:visibility="gone" >

        <ImageButton
            android:id="@+id/template_ClosePicEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12.0dip"
            android:layout_marginTop="-6.0dip"
            android:background="@drawable/btn_close_a" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical" >

            <Button
                android:id="@+id/template_replacepic"
                android:layout_width="50.0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="20.0dip"
                android:layout_weight="4.0"
                android:background="@drawable/btn_clip_ok_bg"
                android:drawableLeft="@drawable/icon_replacepic"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:singleLine="true"
                android:text="@string/replace_pic"
                android:textColor="@color/white"
                android:textSize="13.0dip" />

            <ImageButton
                android:id="@+id/template_rightrotate"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="2.0"
                android:background="@color/lucency"
                android:gravity="center_horizontal"
                android:src="@drawable/btn_rotate_rightrotate"
                android:textColor="@color/white"
                android:textSize="11.0sp" />

            <ImageButton
                android:id="@+id/template_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="2.0"
                android:background="@color/lucency"
                android:gravity="center_horizontal"
                android:src="@drawable/btn_rotate_horizontalrotate_bg"
                android:textColor="@color/white"
                android:textSize="11.0sp" />

            <ImageButton
                android:id="@+id/template_vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_weight="2.0"
                android:background="@color/lucency"
                android:gravity="center_horizontal"
                android:src="@drawable/btn_rotate_verticalrotate"
                android:textColor="@color/white"
                android:textSize="11.0sp" />
        </LinearLayout>
    </RelativeLayout>
    

</RelativeLayout>