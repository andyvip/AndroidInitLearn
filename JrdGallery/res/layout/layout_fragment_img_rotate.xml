<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="-5.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
>
    <com.jrdcom.mt.widget.ViewEditRotate
        android:id="@+id/view_editrotate"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10.0dip"
        android:layout_above="@+id/Edit_rotateBottom"/>
    <LinearLayout
        android:id="@+id/Edit_rotateBottom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/bg_effect_and_frame_background"
        android:visibility="visible"
        android:weightSum="12.0"
        android:layout_alignParentBottom="true"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
        >
            <Button
                android:id="@+id/rotateLeft"
                android:background="@drawable/btn_rotate_leftrotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
        >
            <Button
                android:id="@+id/rotateRight"
                android:background="@drawable/btn_rotate_rightrotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
        >
            <Button
                android:id="@+id/rotateHorizontal"
                android:background="@drawable/btn_rotate_horizontalrotate_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
        >
            <Button
                android:id="@+id/rotateVertical"
                android:background="@drawable/btn_rotate_verticalrotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.0"
        >
            <CheckBox
                android:id="@+id/freerotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12.0dip"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:background="@drawable/btn_rotate_freerotate"
                android:text="@string/freedom_rotate"
                style="@style/bth_checkbox"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/rotateFreeview"
        android:background="@drawable/bg_view_topmenubackgroundpic_b"
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="46.0dip"
        android:layout_marginBottom="-10.0dip"
        android:layout_above="@+id/Edit_rotateBottom"
        >
        <SeekBar
            android:id="@+id/seekbar_rotate"
            android:layout_width="220.0dip"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:max="100"
            android:progress="50"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:maxHeight="10.0dip"
            android:progressDrawable="@drawable/seekbar_progress"
            android:minHeight="10.0dip"
            android:thumb="@drawable/seek_thumb_normal"
            />
        <Button
            android:textSize="12.0dip"
            android:textColor="@color/black"
            android:id="@+id/btn_rotatefree_reset"
            android:background="@drawable/btn_clip_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:text="@string/reset"/>
    </LinearLayout>
</RelativeLayout>
