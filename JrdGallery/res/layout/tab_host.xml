<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true" />

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_alignParentBottom="true"
                android:background="@null"
                android:gravity="center" />
        </RelativeLayout>
    </TabHost>

    <RadioGroup
        android:id="@+id/bottom_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_mainmenu_back_a"
        android:checkedButton="@+id/mopilable"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="12.0dip" >

        <Button
            android:id="@+id/rb_pintu_tab_template"
            style="@style/tabbar_3btn_item_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tabicon_pintu_template"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:drawablePadding="-6.0dip"
            android:gravity="center_vertical"
            android:paddingRight="12.0dip"
            android:text="@string/puzzle_template"
            android:textSize="14.0dip" />

        <Button
            android:id="@+id/rb_pintu_tab_freedom"
            style="@style/tabbar_3btn_item_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tabicon_pintu_freedom"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:drawablePadding="-6.0dip"
            android:gravity="center_vertical"
            android:paddingRight="12.0dip"
            android:text="@string/puzzle_freedom"
            android:textSize="14.0dip" />

        <Button
            android:id="@+id/rb_pintu_tab_joint"
            style="@style/tabbar_3btn_item_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tabicon_pintu_joint"
            android:layout_marginTop="@dimen/bottom_tabbar_top_dimen"
            android:drawablePadding="-6.0dip"
            android:gravity="center_vertical"
            android:paddingRight="12.0dip"
            android:text="@string/puzzle_join"
            android:textSize="14.0dip" />
    </RadioGroup>

</RelativeLayout>
